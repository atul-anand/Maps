<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plan_card"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plan_card_heading"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textSize="@dimen/material_text_subhead"
            android:textStyle="bold" />

        <!--<TextView-->
        <!--android:id="@+id/plan_card_created_by"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="18dp"-->
        <!--android:textSize="@dimen/material_text_subhead" />-->

        <TextView
            android:id="@+id/plan_card_type"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textSize="@dimen/material_text_subhead" />
        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="18dp"-->
        <!--android:orientation="horizontal">-->
        <!--<TextView-->
        <!--android:id="@+id/plan_card_updated_label"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="@dimen/material_text_caption"-->
        <!--android:text="@string/plan_card_time_label"/>-->
        <TextView
            android:id="@+id/plan_card_updated_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plan_card_time_default"
            android:textSize="@dimen/material_text_caption" />
        <!--</LinearLayout>-->
    </LinearLayout>

    <TextView
        android:id="@+id/plan_card_status"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="@dimen/material_text_subhead"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/plan_card_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:padding="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/plan_card_fly_now_button"
        style="?android:textAppearanceSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_fly_now"
        android:text="@string/plan_fly_now"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        android:textSize="@dimen/material_text_button"
        android:visibility="gone" />

</android.support.v7.widget.CardView>